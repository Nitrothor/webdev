<?php


function flipcoin () {

	return mt_rand(0,1);
      
}

$ftoss = null;
$stoss = null;
do {
    if ($stoss !== null) {  
        $ftoss = $stoss; 
    }
    $stoss = flipcoin();  
   echo ($stoss ? '<img src="heads.png" style="width:70px;height:70px"/>' : '<img src="tails.png" style="width:70px;height:70px"/>') , "\n";
    
} while ($ftoss + $stoss != 2);

echo flipcoin ();


?>



